<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10.0"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.javafxproject.LoginController">
    <padding>
        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
    </padding>

    <Label text="Email:"/>
    <TextField fx:id="emailField" promptText="Enter your email" maxWidth="200"/>

    <Label text="Password:"/>
    <PasswordField fx:id="passwordField" promptText="Enter your password" maxWidth="200"/>

    <Button text="Submit" onAction="#onSubmitButtonClick" maxWidth="100"/>

    <Label fx:id="resultLabel" wrapText="true" style="-fx-font-size: 14;" />
</VBox>
